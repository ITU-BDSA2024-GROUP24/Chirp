@using Chirp.Core
@using Chirp.Web.Pages.Shared.Model
@inject SignInManager<Author> SignInManger
@model CheepFormatMessage

@if (SignInManger.IsSignedIn(User))
{
    <div>class="CheepMessageField"
        <h4> Hello @(User.Identity!.Name), what do you want to share today? :))</h4>
        <form method="post">
            <input style="float: none " type="text" asp-for="Message" />
            <input type="submit" value="Post"/>
        </form>
        </div>
}
